{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
